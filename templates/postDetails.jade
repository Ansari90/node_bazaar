html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
      
        title Node Bazaar
      
        link(href="css", rel="stylesheet")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
        script(src="js")
      
        style(type="text/css") .centerStuff { text-align: center; } .rowMargin { margin-top: 20px; } .formMargin { margin-top: 15%; } .footer { position: absolute; bottom: 0; width: 100%; }
        
    body
        nav(class="navbar navbar-default")
            div(class="container-fluid")
                div(class="navbar-header")
                  a(class="navbar-brand", href="main") Node Bazaar

                div(class="collapse navbar-collapse", id="bs-example-navbar-collapse-1")
                    ul(class="nav navbar-nav")
                        li
                            a(href="list") All Postings
                        li
                            a(href="create") Create Posting
                        li(class="dropdown")
                            a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-expanded="false") Your Postings
                                span(class="caret")
                            ul(class="dropdown-menu" role="menu")
                                li
                                    a(href="#")
                                        form(class="dropdown-form", role="search", method="post", action="viewform")
                                            div(class="form-group")
                                                input(name="action", type="text", value="key", hidden)
                                                input(name="key", type="text" class="form-control" placeholder="Post Key")
                                            button(type="submit", class="btn btn-default") Get Postings


                    form(class="navbar-form navbar-right", role="search", method="post", action="viewform")
                        div(class="form-group")
                            input(name="action", type="text", value="title", hidden)
                            input(name="title", type="text", class="form-control", placeholder="Posting Title")
                        button(type="submit", class="btn btn-default") Find Postings
            
        div(class="container")
            div(class="page-header")
                h1 #{post.title}
        
        div(class="container")
            div(class="media")
                div(class="media-body")
                    div(class="row rowMargin")
                        div(class="col-md-4")
                            p Posting Date:
                            h4 #{post.date}
                        div(class="col-md-4")
                            p Asking Price:
                            h4 $#{post.price}
                        div(class="col-md-4")
                            p Primary Contact:
                            h4 #{post.contact}
                    div(class="row rowMargin")
                        div(class="col-md-offset-4 col-md-8")
                            p #{post.content}
            div(class="container formMargin")
                form(method="post", action="regform")
                    p Do you want to delete this post?
                    div(class="form-group")
                        input(name="action", type="text", value="delete", hidden)
                        input(name="id", type="text", value="#{post._id}", hidden)
                        input(name="key", type="text", class="form-control", placeholder="Post Key", style="width:100px;")
                    button(type="submit", class="btn btn-default") Delete
                    
        footer(class="footer centerStuff")
            div(class="container")
                p(class="text-muted") IN-PERSON, CASH ONLY TRANSACTIONS RECOMMENDED!
                p(class="text-muted") Do NOT exchange Electronic Payment Information!!