html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
      
        title Node Bazaar
      
        link(href="css", rel="stylesheet")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
        script(src="js")
      
        style(type="text/css") .centerStuff { text-align: center; } .formMargin { margin-top: 35px; }
        
    body
        nav(class="navbar navbar-default")
            div(class="container-fluid")
                div(class="navbar-header")
                    a(class="navbar-brand", href="main") Node Bazaar

                div(class="collapse navbar-collapse", id="bs-example-navbar-collapse-1")
                    ul(class="nav navbar-nav")
                        li
                            a(href="list") All Postings
                        li(class="dropdown")
                            a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-expanded="false") Your Postings
                                span(class="caret")
                            ul(class="dropdown-menu" role="menu")
                                li
                                    a(href="#")
                                        form(class="dropdown-form", role="search", method="post", action="viewform")
                                            div(class="form-group")
                                                input(name="action", type="text", value="key", hidden)
                                                input(name="key", type="text" class="form-control" placeholder="Post Key")
                                            button(type="submit", class="btn btn-default") Get Postings


                    form(class="navbar-form navbar-right", role="search", method="post", action="viewform")
                        div(class="form-group")
                            input(name="action", type="text", value="title", hidden)
                            input(type="text", class="form-control", placeholder="Posting Title")
                        button(type="submit", class="btn btn-default") Find Postings
      
        div(class="container")
            div(class="page-header")
                h1 Make A Posting!
                h1
                    small Items Big or Small, Old or New, Anything Really
      
        div(class="container")
            form(class="form-signin", method="post", action="regForm")
                div(class="row")
                    div(class="col-md-6")
                        h4 Title
                        p What is this post about?
                        input(type="text", name="title", class="form-control", placeholder="e.g. Steel Toe Boots Size 10", required, autofocus)
                    div(class="col-md-6")
                        h4 Price
                        p What do you want for this?
                        input(type="text", name="price", class="form-control", placeholder="e.g. $1 Million", required)
                div(class="row")
                    div(class="col-md-6")
                        h4 Key
                        p Only someone with the key assigned here can delete this posting.
                        input(type="text", name="key", class="form-control", placeholder="e.g. bootPost")
                    div(class="col-md-6")
                        h4 Primary Contact
                        p Whats the best way to get in touch with you?
                        input(type="text", name="contact", class="form-control", placeholder="e.g. flyGuy1234@greatmail.com", required)
                        
                div(class="row centerStuff formMargin")
                    h4 Post Content
                    textarea(cols="100", rows="7", name="content")
                div(class="row centerStuff formMargin")
                    div(class="col-md-2 col-md-offset-5")
                        input(name="action", type="text", value="new", hidden)
                        button(class="btn btn-primary btn-lg", type="submit", role="button") Create Post